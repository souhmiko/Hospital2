@page
@model Hospital2.Pages.Employee.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    h2 {
        text-align: center;
        margin-top: 30px;
    }

    dt {
        font-size: 16px;
    }
</style>

<h2>Details</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetails.AspNetUserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDetails.AspNetUserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetails.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDetails.Department.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetails.WorkTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDetails.WorkTitle.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./EmployEdit" class="btn btn-primary"  asp-route-id="@Model.UserDetails?.Id">Edit</a>
    <a asp-page="./EmployIndex" class="btn btn-secondary" style="margin-left:10px;">Back to List</a>
</div>

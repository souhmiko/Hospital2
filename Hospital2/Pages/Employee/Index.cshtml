@page
@model Hospital2.Pages.Employee.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    h2 {
        text-align: center;
        margin-top: 30px;
    }

</style>


<h2>Employees</h2>

<p>
    <a asp-page="Create" class="create-button"><i class="fa fa-plus icon-button" aria-hidden="true"></i>New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserDetails[0].AspNetUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetails[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetails[0].WorkTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserDetails) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkTitle.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
